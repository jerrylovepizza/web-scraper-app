<div class="container newsList">
    <div class="row">
        {{#each news}}
        <div class="list-group col-lg-5 col-12 m-auto" id="news">
            <a href="{{this.link}}" id="ignLink" target="_blank">
                <div class="news-title">{{this.title}}</div>
                <img id="thumb" src="{{this.img}}">
            </a>
            <button class="saveBtn btn-danger" data-ObjectId="{{this._id}}" data-Title="{{this.title}}"
                data-State="{{this.saved}}">
                <i class="fas fa-heart"></i>
            </button>
        </div>
        {{/each}}
    </div>
